<h1>Listing board_agenda_items</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Status</th>
      <th>Position</th>
      <th>Board</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @board_agenda_items.each do |board_agenda_item| %>
      <tr>
        <td><%= board_agenda_item.description %></td>
        <td><%= board_agenda_item.status %></td>
        <td><%= board_agenda_item.position %></td>
        <td><%= board_agenda_item.board_id %></td>
        <td><%= link_to 'Show', board_agenda_item %></td>
        <td><%= link_to 'Edit', edit_board_agenda_item_path(board_agenda_item) %></td>
        <td><%= link_to 'Destroy', board_agenda_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board agenda item', new_board_agenda_item_path %>
