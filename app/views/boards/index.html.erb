<h1>Listing boards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Tag list</th>
      <th>Status</th>
      <th>Is private</th>
      <th>Is searchable</th>
      <th>Uri</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.description %></td>
        <td><%= board.tag_list %></td>
        <td><%= board.status %></td>
        <td><%= board.is_private %></td>
        <td><%= board.is_searchable %></td>
        <td><%= board.uri %></td>
        <td><%= board.code %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

